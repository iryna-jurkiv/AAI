<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
    <title>Add Employee</title>

</head>
<%- include('partials/cssPartials') %>

<body>

<%- include('partials/nav') %>

<div class="container mt-5">
    <div class="row align-items-center justify-content-center">
        <div class="col-6 ">
            <form action="/api/addemployee" method="post">
                First Name: <input class="form-control" type="text" name="first_name" value="">
                Last Name: <input class="form-control" type="text" name="last_name" value="">
                Job Title: <input class="form-control" type="text" name="job_title" value="">
                Department: <input class="form-control" type="text" name="department" value="">
                Employee Number: <input class="form-control" type="text" name="employee_number" value="">
                Employee Email: <input class="form-control" type="text" name="email" value="">
                Set Password: <input class="form-control" type="password" name="password" placeholder="Set a default password">
                <label for="exampleFormControlSelect1">Manager Name</label>
                <select class="form-control" name="manager" id="exampleFormControlSelect1">
                    <% foundManagers.forEach(function(manager){ %>
                        <option name="manager" value="<%= manager.user_id%>"> <%= manager.first_name %> <%= manager.last_name %></option>
                    <% }); %>
                </select>
                <label for="exampleFormControlSelect1">Access Level</label>
                <select class="form-control" name="access_level" id="exampleFormControlSelect1">
                    <option disabled selected value="">Change Access Rights</option>
                    <option value="0">HR (2)</option>
                    <option value="1">Manager (1)</option>
                    <option value="2">Staff (0)</option>
                </select>
                <button class="btn btn-primary mt-2">Reset Password</button>
            </form>
        </div>

    </div>
</div>



<%- include('partials/jsPartials') %>

</body>
</html>
