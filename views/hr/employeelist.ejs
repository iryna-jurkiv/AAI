<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee List</title>
</head>
<%- include('partials/cssPartials') %>

<body>

    <%- include('partials/nav') %>
<div class="container">
    <table class="table mt-5" id="records_table">

        <tr>
            <th scope="col">Employee Number</th>
            <th scope="col">Full Name</th>
            <th scope="col">Department</th>
            <th scope="col">Email Address</th>
            <th scope="col">Access Level</th>
            <th scope="col">Options</th>
        </tr>
        <% for (let i = 0; i < allUsers.length; i++) { %>

            <tr>
                <td><%= allUsers[i].employee_number%></td>
                <td><%= allUsers[i].first_name %> <%= allUsers[i].last_name %></td>
                <td><%= allUsers[i].department%></td>
                <td><%= allUsers[i].email%></td>
                <td><%= allUsers[i].access_level%></td>
                <td><a class="btn btn-primary mr-1" style="width: 130px; margin: 5px" href="/hr/profile/<%= allUsers[i].employee_number%>/">Edit Profile</a>
                    <a class="btn btn-primary" style="width: 130px; margin: 5px" href="/hr/requests/<%= allUsers[i].employee_number%>/">Create Request</a></td>
            </tr>
        <% } %>

    </table>
</div>

    <%- include('partials/jsPartials') %>

</body>
</html>
