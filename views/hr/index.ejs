<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <%- include('partials/cssPartials')%>
<style>


#team{
  border-style:groove;
}

#personalinfo{
  border-style:groove;

}
#checklist{
  border-style:groove;

}

#image{
  border-style:groove;

}

</style>
</head>
<body>
<%- include('partials/nav') %>

<div class="container">
    <div class="row">
        <div class="col-12">
          <br>
            <h1 > Welcome <%=foundUser.first_name %>!</h1>
            <br>
            <div id="personalinfo">
            <h3 style="background-color: #f2f2f2">  My Profile</h3>
            <ul>
              <br>
              <div id="random">
                <img style="border-radius: 50%; height:200px;background-attachment:fixed" src="<%= foundUser.image%>" alt="">
              </div>
              <br>
              <p>First Name : <%=foundUser.first_name %></p>
              <p>Last Name : <%= foundUser.last_name %></p>
              <p>Job Title : <%= foundUser.job_title %></p>
              <p>Employee Number : <%= foundUser.employee_number %></p>
            </div>
            <br>
            <br>
            <div id="team">
            <h3 style="background-color:#f2f2f2"> My team </h3>
            <ul>
              <% foundDepartment.forEach(function(department){ %>
                  <p>                   <img style="border-radius: 50%; width:65px; height:60px;" src="<%= department.image%>" alt=""> </li>
                    <a href='/hr/<%= department.user_id %>'><%= department.first_name %> <%= department.last_name %> </a>
                  </p>
                  <% }); %>
           </ul>
        </div>
        <br>
        <br>
        <div id="checklist">
        <h3 style="background-color: #f2f2f2">  HR Checklist</h3>
        <iframe src="http://www.hrs.colostate.edu/pdfs/form-onboarding-checklist.pdf" width="100%" height="500px">
        </iframe>
    </div>
    <br>
    <div id="image">
      <h3 style="background-color: #f2f2f2">  HR Calendar</h3>
      <img style="margin-left:250px; width: 500px;" src="https://www.calendarschool.com/wp-content/uploads/2020/01/February-2020-Calendar.jpg">
</div>
</body>
</html>
